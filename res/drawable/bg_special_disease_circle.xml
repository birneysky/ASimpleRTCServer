<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>  
        <shape android:shape="oval" >  
            <corners android:radius="90dp"/>  
            <solid android:color="@color/royalblue" />  
            <size android:width="67dp" android:height="67dp"/>  
        </shape>  
    </item>  
      
    <item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp" >  
        <selector xmlns:android="http://schemas.android.com/apk/res/android">  
            <item android:state_pressed="true">  
                <shape android:shape="oval" >  
                    <corners android:radius="90dp"/>  
                    <solid android:color="#e66b4f" />  
                    <size android:width="65dp" android:height="65dp"/>  
                </shape>  
            </item>  
              
            <item>  
                <shape android:shape="oval" >  
                    <corners android:radius="90dp"/>  
                    <solid android:color="#FFFFFFFF" />  
                    <size android:width="65dp" android:height="65dp"/>  
                </shape>  
            </item>  
          
        </selector>  
    </item>

</layer-list>
