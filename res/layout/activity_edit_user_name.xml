<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title_personal_info">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">
        <EditText 
            android:id="@+id/et_edit_name_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:layout_toLeftOf="@+id/iv_edit_name_del"
            android:hint="昵称"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_edit_name_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/emotionstore_progresscancelbtn"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            />
    </RelativeLayout >


</LinearLayout>
