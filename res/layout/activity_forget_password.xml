<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity" 
    android:orientation="vertical"
    android:background="@color/bg_menu_question_item_child"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_regist_phonenum"
        android:gravity="center_vertical">
        
        <TextView 
            android:id="@+id/tv_input_phnoe_number_froget_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>
        <Button 
            android:id="@+id/btn_send_check_code_forget_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送验证码"
            android:background="@drawable/bg_btn_yellow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_regist_phonenum"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        
        <EditText 
            android:id="@+id/et_input_check_code_forget_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="输入验证码"
            android:inputType="number"
            android:textSize="18sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <TextView 
            android:id="@+id/tv_show_time_forget_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="60s"
            android:background="@drawable/bg_tv_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button 
        android:id="@+id/btn_next_step_forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="下一步"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/whatsnew_btn_nor"
        />
</LinearLayout>
