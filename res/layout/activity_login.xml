<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_view_bg"
    tools:context=".LoginActivity" >  
    <LinearLayout
        android:id="@+id/layout_edit_phone_number"
        	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="60dp"
	        android:orientation="vertical"
	        >
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        >
	        <ImageView
	            android:id="@+id/head_icon"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_alignParentLeft="true"
	        	android:src="@drawable/login_user_icon"
	        	android:layout_centerVertical="true"/>

	        <EditText
	            android:id="@+id/et_phonenum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:inputType="number"
	            android:singleLine="true" 
	            android:hint="手机号码"
	            android:textSize="18sp"
	            android:textColor="@color/white"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:layout_toRightOf="@id/head_icon"
	            android:layout_alignParentRight="true"/>
	    </RelativeLayout>
	    <ImageView
	        android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
        	android:background="@color/light"
	        />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_edit_pwd"
        	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="30dp"
	        android:orientation="vertical"
	        android:layout_below="@id/layout_edit_phone_number">
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        >
	        <ImageView
	            android:id="@+id/head_pwd_icon"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_alignParentLeft="true"
	        	android:src="@drawable/login_pwd_bg"
	        	android:layout_centerVertical="true"/>

	        <EditText
	            android:id="@+id/et_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="输入登录密码"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:textColor="@color/white"
	            android:textSize="18sp"
	            android:inputType="textPassword"
	            android:layout_toRightOf="@id/head_pwd_icon"
	            android:layout_toLeftOf="@+id/btn_delete_pwd"/>

	      <Button 
	          	android:id="@+id/btn_delete_pwd"
	            android:layout_width="14dp"
	            android:layout_height="14dp"
	            android:padding="2dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:background="@drawable/login_delete_all_content_btn"
	            />  
	    </RelativeLayout>
	    <ImageView
	        android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
        	android:background="@color/light"
	        />
    </LinearLayout>

    <Button 
        android:id="@+id/btn_login"
        android:layout_below="@id/layout_edit_pwd"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whatsnew_btn_nor"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    
    <Button 
        android:id="@+id/btn_login_regist"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@null"/>

    <Button
        android:id="@+id/btn_login_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_login_regist"
        android:layout_alignRight="@+id/layout_edit_pwd"
        android:text="忘记密码"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@null" />

</RelativeLayout>