<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/bg_menu_question_item_child"
    >

    <RelativeLayout 
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <EditText 
            android:id="@+id/et_published_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="有物品丢失，请帮忙寻找，谢谢~"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:background="@null"/>
        <GridView 
	        android:id="@+id/noScrollgridview"
	        android:layout_below="@id/et_published_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:numColumns="4"
	        android:scrollbars="none"
	        android:horizontalSpacing="5dp"        
	        android:verticalSpacing="5dp" 
	        >
    	</GridView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/published_select_position" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_published_postion" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择地点"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_to_list"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/black_line"/>
        <LinearLayout 
            android:id="@+id/layout_help_from_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求助好友"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginRight="15dp"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                
            <ImageButton 
                android:id="@+id/ib_search_by_xx"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/faqi_icon_01"
                android:contentDescription="@null"
                android:layout_weight="1"/>
            <ImageButton 
                android:id="@+id/ib_search_by_xl"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/faqi_icon_02"
                android:layout_marginLeft="12dp"
                android:contentDescription="@null"
                android:layout_weight="1"/>
            <ImageButton 
                android:id="@+id/ib_search_by_wx"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/faqi_icon_03"
                android:layout_marginLeft="12dp"
                android:contentDescription="@null"
                android:layout_weight="1"/>
            <ImageButton 
                android:id="@+id/ib_search_by_qq"
                android:background="@color/transparent" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/faqi_icon_04"
                android:layout_marginLeft="12dp"
                android:contentDescription="@null"
                android:layout_weight="1"/>
            
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	<Button 
	    android:id="@+id/btn_published"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="发布"
	    android:background="@drawable/button_bg"
	    android:textColor="@color/white"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="20dp"/>
</LinearLayout>