<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SleepModeActivity" 
    android:background="@color/white">
    
    <LinearLayout 
        android:id="@+id/layout_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="10dp"
        android:background="@drawable/whatsnew_btn_pressed">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_sleep_mode_notice_begin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="开始" 
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:gravity="center_vertical|left"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_sleep_mode_show_begin_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:layout_gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:gravity="center_vertical|right"/>
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/layout_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bg_title_personal_info">

        <TextView
            android:id="@+id/tv_sleep_mode_notice_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="结束" 
            android:layout_weight="1"
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:gravity="center_vertical|left"/>

        <TextView
            android:id="@+id/tv_sleep_mode_show_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:layout_weight="1"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:gravity="center_vertical|right"/>
        
    </LinearLayout>

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:orientation="horizontal"
	    android:layout_gravity="center"
	    android:paddingTop="10dp"
	    android:layout_weight="1"
	    android:gravity="center">
	    
	    <net.simonvt.numberpicker.NumberPicker
		    android:id="@+id/numberPickerHour"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		   />
	   
		<net.simonvt.numberpicker.NumberPicker
		    android:id="@+id/numberPickerMinute"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	 	   />
	</LinearLayout>
	

</LinearLayout>
