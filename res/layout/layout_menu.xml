<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_margin="19dp">

        <com.view.circleimageview.CircleImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_photo" 
            app:border_color="@color/transparent"
            app:border_width="1dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_user_photo"
            android:layout_marginLeft="10dp"
            android:text="未命名"
            android:textColor="#FFFFFFFF"
            android:textSize="21sp" 
            android:singleLine="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_user"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_menu_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_taobao"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_question"
                android:text="常见问题"
                android:textColor="#FFf0f0f0"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_menu_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <ImageView
                android:id="@+id/iv_suggest"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_suggest" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_suggest"
                android:text="意见反馈"
                android:textColor="#FFf0f0f0"
                android:textSize="20sp "/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_menu_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <ImageView
                android:id="@+id/iv_aboutus"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_about" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_aboutus"
                android:text="关于我们"
                android:textColor="#FFf0f0f0"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_menu_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <ImageView
                android:id="@+id/iv_shareus"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_about" 
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_shareus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_shareus"
                android:text="分享我们"
                android:textColor="#FFf0f0f0"
                android:textSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_menu_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_exit" />

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_exit"
                android:text="退出登录"
                android:textColor="#FFf0f0f0"
                android:textSize="20sp"/>
        </RelativeLayout> 
    </LinearLayout>

</RelativeLayout>