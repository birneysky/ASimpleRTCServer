<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp" 
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
	    
	<RelativeLayout
	    android:id="@+id/layout_above_del" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white">
	    <com.view.circleimageview.CircleImageView
	         android:id="@+id/civ_search_message_item"
	         android:layout_width="50dp"
	         android:layout_height="50dp"
	         android:layout_alignParentLeft="true"
	         android:layout_centerVertical="true"
	         android:layout_margin="20dp"
	         android:src="@drawable/app_logo"/>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_toRightOf="@id/civ_search_message_item"
	        android:layout_centerVertical="true"
	        >
	        <TextView 
	            android:id="@+id/tv_search_message_user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="namefg"
	            style="@style/TvTextShow14Black"/>
	        <TextView 
	            android:id="@+id/tv_search_message_message"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="help messagefg"
	            android:layout_marginTop="5dp"
	            style="@style/TvTextShow14Black"/>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginTop="5dp"
	            >
	            <ImageView 
	                android:id="@+id/iv_search_message_loc"
	                android:layout_height="15dp"
	                android:layout_width="wrap_content"
	                android:src="@drawable/icon_distance_loc"
	                />
	            <TextView 
	                android:id="@+id/tv_search_message_dis"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="正在获取..."
		            android:layout_marginLeft="5dp"
		            android:textColor="@color/royalblue"/>
	        </LinearLayout>
	    </LinearLayout>
	    <Button 
	        android:id="@+id/btn_search_message_item_del"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentBottom="true"
	        android:text="删除"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/bg_yellow_del"
	        android:visibility="gone"/>
    </RelativeLayout>
	<ImageView
	    android:id="@+id/iv_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:src="@drawable/line_gray"
	    android:visibility="gone"
	    android:contentDescription="@null"/>
</RelativeLayout>
