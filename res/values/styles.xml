<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
  
	<style name="CustomWindowTitle" parent="android:Theme">  
	  <item name="android:textAppearance">@style/CustomWindowTitleText</item>  
	</style> 
	
	<style name="CustomWindowTitleText" parent="android:TextAppearance.WindowTitle">  
	  <item name="android:textColor">@color/black</item>  
	  <item name="android:textSize">23sp</item> 
	</style>    
    
    
	<!-- 自定义导航栏 -->
    <style name="CustomWindowTitleBackground"> 
    	<item name="android:background">@color/bg_title</item>
	</style>
  
	<style name="MyTitleBarStyle" parent="android:Theme"> 
   		<item name="android:windowTitleSize">@dimen/title_bar_height</item> 
   		<item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item> 
   		<item name="android:textSize">23sp</item>
   		<item name="android:textColor">@color/black</item>
	</style>
	<style name="BtnPaddingLeft">
	    <item name="android:textSize">12sp</item>
	    <item name="android:paddingLeft">13dp</item>
	    <item name="android:paddingRight">10dp</item>
	    <item name="android:paddingTop">5dp</item>
	    <item name="android:paddingBottom">5dp</item>
	</style>
	<style name="BtnPaddingRight">
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:paddingRight">13dp</item>
	    <item name="android:paddingTop">5dp</item>
	    <item name="android:paddingBottom">5dp</item>
	</style>
	
	<style name="BtnCircleShow">
	    <item name="android:textColor">@color/royalblue</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:background">@drawable/bg_special_disease_circle</item>
	    <item name="android:layout_marginLeft">10dp</item>
	</style>
	
	<style name="TvTextShow14Black">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">14sp</item>
	</style>
	<style name="TvTextShow15Black">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">15sp</item>
	</style>
	<style name="TvTextShow16Black">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">16sp</item>
	</style>
	<style name="TvTextShow18Black">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">18sp</item>
	</style>
	<style name="TvTextshow14BlackBack">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:background">@color/bg_title</item>
	</style>
	<style name="TvTextShow20BlackBack">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:background">@color/white</item>
	</style>
	
	
	<style name="ThemeActivity">  
       <item name="android:windowAnimationStyle">@style/AnimationActivity</item>  
       <item name="android:windowNoTitle">true</item>  
   </style>  
  
   <style name="AnimationActivity" parent="@android:style/Animation.Activity">  
       <item name="android:activityOpenEnterAnimation">@anim/in_right</item>
 		<item name="android:activityOpenExitAnimation">@anim/out_left</item>
		<item name="android:activityCloseEnterAnimation">@anim/in_left</item>
		<item name="android:activityCloseExitAnimation">@anim/out_right</item> 
   </style>  
</resources>
